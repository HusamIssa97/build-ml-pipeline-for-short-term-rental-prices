name: basic_cleaning

conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: "Input artifact name (e.g., sample.csv:latest)"
        type: str

      output_artifact:
        description: "Output artifact name (e.g., clean_sample.csv)"
        type: str

      output_type:
        description: "Type of the output artifact (e.g., clean_sample)"
        type: str

      output_description:
        description: "Description of the output artifact"
        type: str

      min_price:
        description: "Minimum price threshold to keep"
        type: float

      max_price:
        description: "Maximum price threshold to keep"
        type: float

    command: >
      python run.py
      --input_artifact {input_artifact}
      --output_artifact {output_artifact}
      --output_type {output_type}
      --output_description {output_description}
      --min_price {min_price}
      --max_price {max_price}
